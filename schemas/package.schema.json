{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Package.json schema (local minimal)",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "main": { "type": "string" },
    "type": { "enum": ["commonjs", "module"] },
    "scripts": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9:_-]+$": { "type": "string" }
      }
    },
    "dependencies": {
      "type": "object",
      "patternProperties": {
        "^[^@]+(@[^@]+)?$": { "type": "string" }
      }
    },
    "devDependencies": {
      "type": "object",
      "patternProperties": {
        "^[^@]+(@[^@]+)?$": { "type": "string" }
      }
    }
  },
  "required": ["name", "version"],
  "additionalProperties": true
}
